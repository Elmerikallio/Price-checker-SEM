# Production Environment Configuration
# Database Configuration
DATABASE_URL="mysql://app_user:app_password@mysql:3306/price_checker"

# JWT Configuration - CHANGE THESE IN PRODUCTION!
JWT_SECRET="CHANGE_THIS_TO_A_STRONG_SECRET_KEY_IN_PRODUCTION_Min32Characters"
JWT_EXPIRES_IN="24h"

# Server Configuration
PORT=3000
NODE_ENV="production"

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL="warn"

# API Configuration
API_VERSION="v1"

# Rate Limiting (stricter for production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# CORS Configuration (restrict in production)
CORS_ORIGIN="https://yourdomain.com"

# Distance calculation
DEFAULT_SEARCH_RADIUS_KM=5
MAX_SEARCH_RADIUS_KM=50

# MySQL Root Password (for docker-compose)
MYSQL_ROOT_PASSWORD="CHANGE_THIS_STRONG_ROOT_PASSWORD"