{
  "name": "price-checker-sem",
  "version": "1.0.0",
  "type": "module",
  "description": "Price checker",
  "main": "src/server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "node scripts/seed.js",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "docker:build": "docker build -t price-checker-sem .",
    "docker:run": "docker run -p 3000:3000 --env-file .env price-checker-sem",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose --env-file .env.production up -d --build",
    "deploy:dev": "./scripts/deploy.sh development",
    "deploy:prod": "./scripts/deploy.sh production",
    "logs": "docker-compose logs -f",
    "health": "curl -k https://localhost/api/v1/health || curl http://localhost:3000/api/v1/health"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Elmerikallio/Price-checker-SEM.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Elmerikallio/Price-checker-SEM/issues"
  },
  "homepage": "https://github.com/Elmerikallio/Price-checker-SEM#readme",
  "dependencies": {
    "@prisma/client": "^6.19.1",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "prisma": "^6.19.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "nodemon": "^3.1.11"
  }
}
