# Database Configuration  
# For development: Using SQLite (no server needed)
DATABASE_URL="file:./dev.db"
# For production: Use MySQL
# DATABASE_URL="mysql://username:password@localhost:3306/price_checker"

# MySQL Configuration for Docker
MYSQL_ROOT_PASSWORD="rootpassword123"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3000
NODE_ENV="development"

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_LEVEL="info"

# API Configuration
API_VERSION="v1"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN="*"

# Distance calculation (for nearby stores)
DEFAULT_SEARCH_RADIUS_KM=5
MAX_SEARCH_RADIUS_KM=50